<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='export'>
  <service name='application/semaphore' type='service' version='0'>
    <create_default_instance enabled='true'/>
    <single_instance/>
    <method_context working_direcory="{{ semaphore_user_home }}/bin">
	<method_credential user='{{ semaphore_user_name }}' group='{{ semaphore_group_name }}' />
   </method_context>
   <exec_method
       name='start'
       type='method'
       exec='grunt serve'
       timeout_seconds='60'/>
   <exec_method
       name='stop'
       type='method'
       exec=':kill'
       timeout_seconds='60'/>
    <property_group name='startd' type='framework'>
      <propval name='duration' type='astring' value='contract'/>
    </property_group>
    <stability value='Unstable'/>
    <template>
      <common_name>
        <loctext xml:lang='C'>Semaphore server</loctext>
      </common_name>
    </template>
  </service>
</service_bundle>
